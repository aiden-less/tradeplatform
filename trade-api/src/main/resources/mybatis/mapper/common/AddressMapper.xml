<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.converage.mapper.common.AddressMapper">
    <resultMap id="BaseResultMap" type="AllAddress">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="pid" property="pid" jdbcType="VARCHAR"/>
        <result column="pinyin" property="pinyin" jdbcType="INTEGER"/>
        <result column="english" property="english" jdbcType="BIT"/>
        <result column="level" property="level" jdbcType="INTEGER"/>
        <!-- 扩展 -->
        <result column="next" property="next" jdbcType="BIT"/>
    </resultMap>
    <sql id="Base_Column_List">
      t.id, t.`name`, t.pid, t.pinyin, t.english, t.`level`
    </sql>

    <select id="selectListByPid" resultMap="BaseResultMap" parameterType="int">
        select
        <include refid="Base_Column_List"/>
        , if(isnull(t2.pid), 0, 1) 'next'
        from
        address t
        left join (select DISTINCT pid from address) t2 on t2.pid = t.id
        where t.pid = #{pid,jdbcType=INTEGER}
    </select>

    <select id="selectById" resultMap="BaseResultMap" parameterType="int">
        select <include refid="Base_Column_List"/>
        from
        address t
        where id = #{id,jdbcType=INTEGER}
    </select>
</mapper>