<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.converage.mapper.user.UserMemberMapper">
    <resultMap id="userMemberRecordMap" type="UserMemberRecord">
        <id property="id" column="id"></id>
        <id property="userId" column="user_id"></id>
    </resultMap>


    <select id="listExpireMember" resultMap="userMemberRecordMap">
      SELECT id,user_id FROM user_member_record WHERE expire_time = DATE_FORMAT( #{expireTime}, '%Y-%m-%d' )
    </select>

    <update id="updateMemberRecord">
        UPDATE user_member_record SET if_valid = FALSE WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </update>

    <update id="updateUserMemberType">
        UPDATE user_info SET member_type = #{memberType} WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </update>

</mapper>