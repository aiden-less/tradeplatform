<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.converage.mapper.user.BankWithdrawMapper">
    <resultMap id="BaseResultMap" type="com.converage.entity.user.BankWithdraw">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="number" property="number" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="id_card" property="idCard" jdbcType="VARCHAR"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
        <result column="state" property="state" jdbcType="TINYINT"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <!-- æ‰©å±• -->
        <result column="user_name" property="userName" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
      t.id, t.user_id, t.`name`, t.`number`, t.real_name, t.id_card, t.amount, t.state, t.update_time, t.create_time
    </sql>

    <select id="selectByPage" resultMap="BaseResultMap" parameterType="com.converage.architecture.dto.Pagination">
        select
        <include refid="Base_Column_List"/>, u.user_name
        from bank_withdraw t join user_info u on u.id = t.user_id
        where 1 = 1
        <if test="startTime != null">
            and t.create_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            and t.create_time &lt;= #{endTime}
        </if>
        <if test="param.state != null">
            and t.state = #{param.state}
        </if>
        <if test="param.name != null">
            and t.name = #{param.name}
        </if>
        <if test="param.number != null">
            and t.number = #{param.number}
        </if>
        <if test="param.realName != null">
            and t.real_name = #{param.realName}
        </if>
        <if test="param.idCard != null">
            and t.id_card = #{param.idCard}
        </if>
        <if test="param.userName != null">
            and u.user_name = #{param.userName}
        </if>
        ORDER BY t.create_time DESC
    </select>

    <update id="updateState" parameterType="com.converage.entity.user.BankWithdraw">
        update bank_withdraw set state = #{state} where id = #{id} and state = 0
    </update>


</mapper>