<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.converage.mapper.user.UserMerchantMapper">
    <resultMap id="userMerchantRecordMap" type="UserMerchantRecord">
        <id property="id" column="id"></id>
        <result property="userId" column="user_id"></result>
        <result property="merchantRankName" column="merchant_name"></result>
        <result property="merchantRulerId" column="merchant_rule_id"></result>
        <result property="createTime" column="create_time"></result>
        <result property="expireTime" column="expire_time"></result>
        <result property="ifValid" column="if_valid"></result>
    </resultMap>


    <update id="updateMerchantRecord">
        UPDATE user_merchant_record SET if_valid = FALSE WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </update>

    <update id="updateUserUserType">
        UPDATE user_info SET type = #{userType} WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </update>


    <select id="listExpireMerchant" resultMap="userMerchantRecordMap">
        SELECT id,user_id FROM user_merchant_record WHERE expire_time = DATE_FORMAT( #{expireTime}, '%Y-%m-%d' )
    </select>
</mapper>