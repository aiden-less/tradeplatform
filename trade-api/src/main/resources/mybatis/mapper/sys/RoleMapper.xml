<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.converage.mapper.sys.RoleMapper">

    <resultMap id="roleMap" type="Role">
        <id property="id" column="id"></id>
        <result property="roleName" column="role_name"></result>
        <result property="createBy" column="create_by"></result>
        <result property="createTime" column="create_time"></result>
        <result property="ifValid" column="if_valid"></result>
        <collection property="functionIdList" ofType="string">
            <result column="function_id"></result>
        </collection>
    </resultMap>

    <delete id="deleteFunction">
        DELETE FROM sys_role_function WHERE role_id = #{roleId}
    </delete>

    <select id="listFunction" resultMap="roleMap">
      SELECT a.id,a.role_name,a.create_by,a.create_time,a.if_valid,b.function_id
       FROM sys_role a LEFT JOIN sys_role_function b on a.id = b.role_id
       WHERE a.id = #{roleId}
    </select>
</mapper>